.selection{
  width: 100%;
  border-bottom: 5px solid #ddd;
}
.header{
  border-left: 2px solid limegreen;
  padding-left: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
}
.text-all{
  color: green;
  font-size: 10px;
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.content-item{
  height: 250rpx;
  width: 45%;
  background-color: skyblue;
  margin: 5px;
}
.content-item image{
  width: 100%;
  height: 100%;
  position: relative;
}
.content-item-text{
  position: absolute;
  bottom: 0;
  color: #fff;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.8),rgba(0,0,0,0));
  height: 125rpx;
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 1%;
  padding-right: 1%;
}
.list-item{
  height: 500rpx;
}
.list-item-images{
  height: 300rpx;
  width: 100%;
  position: relative;
}
.list-item-images-img{
  height: 100%;
  width: 100%;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right: 50rpx;
}
.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 20rpx;
  padding: 0 2%;
  /* background-color: blue; */
}
.list-item-text-title{
  font-weight: bold;

}
.list-item-text-content{
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}